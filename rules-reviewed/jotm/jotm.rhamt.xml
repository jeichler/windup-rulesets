<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/schema/jboss-ruleset" id="jotm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <metadata>
        <description>
            This ruleset finds JOTM JTA implementations.
        </description>
        <dependencies>
            <addon id="org.jboss.windup.rules,windup-rules-javaee,3.0.0.Final" />
            <addon id="org.jboss.windup.rules,windup-rules-java,3.0.0.Final" />
        </dependencies>
        <targetTechnology id="eap" versionRange="[6,7,8)" />
    </metadata>
    <rules>
        <rule id="jotm-00001">
            <when>
                <javaclass references="org.objectweb.jotm.{*}">
                    <location>IMPORT</location>
                </javaclass>
            </when>
            <perform>
                <hint title="JOTM usage" effort="2" category-id="mandatory">
                    <message>
                        JOTM JTA implementations are not loaded by EAP on deployment.
                        This results in "java.lang.NoClassDefFoundError: sun/rmi/server/UnicastServerRef" when the module is deployed.
                    </message>
                    <link href="https://access.redhat.com/solutions/1217863" title="Knowledge base article with solution on exception raised when deploying a module using transaction services provided by JOTM" />
                    <tag>transactions</tag>
                </hint>
            </perform>
        </rule>
    </rules>
</ruleset>
